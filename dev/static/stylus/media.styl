@media screen and (max-width: 445px)
	.header-container__top,
	.content-container,
	.footer-container
		margin-left 10px

	section.header
		margin-bottom 20px
		
	.bottom-content-title
		margin-bottom 10px

	ul.header-container__nav
		display none
		background-color NavBarColor
		
		li
			display block
			padding 23px 23px 22px

			&:hover
				padding-top 22px
				background-color NavBarVerticalHoverColor
				border-top 1px solid NavBarLineColor
				border-bottom 3px solid NavBarHoverColor
			a
				color NavBarTextColor
				font-family NavBarFont
				font-size rem(14)
				
				&:hover
					color NavBarHoverColor

	.sandwich-menu
		display block
		
